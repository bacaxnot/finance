{
  "name": "@repo/api",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts & bun run build:rpc:watch",
    "build:rpc": "tsdown",
    "build:rpc:watch": "tsdown --watch",
    "docs": "hono-auto-docs generate --config ./hono-docs.ts"
  },
  "exports": {
    "./rpc": {
      "types": "./dist/rpc.d.ts",
      "import": "./dist/rpc.js"
    }
  },
  "dependencies": {
    "@hono/zod-validator": "0.7.5",
    "@repo/auth": "workspace:*",
    "@repo/core": "workspace:*",
    "@scalar/hono-api-reference": "^0.9.28",
    "hono": "^4.10.8",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "hono-auto-docs": "^0.1.2",
    "tsdown": "^0.18.2"
  }
}