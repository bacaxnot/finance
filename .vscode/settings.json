{
  // The path ("/path/to/bun") to the `bun` executable.
  "bun.runtime": "bun",
  // If support for Bun should be added to the default "JavaScript Debug Terminal".
  "bun.debugTerminal.enabled": true,
  // If the debugger should stop on the first line of the program.
  "bun.debugTerminal.stopOnEntry": false,
  // Glob pattern to find test files. Defaults to the value shown below.
  "bun.test.filePattern": "**/*{.test.,.spec.,_test_,_spec_}{js,ts,tsx,jsx,mts,cts,cjs,mjs}",
  // The custom script to call for testing instead of `bun test`
  "bun.test.customScript": "bun test",
  // File nesting (looks like a tree in the explorer)
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    // nest all env files under .env
    ".env": "*.env, .env.*, .envrc, env.d.ts",
    // nest all gitignore files under .gitignore
    ".gitignore": ".gitattributes, .gitmodules, .gitmessage, .mailmap, .git-blame*",
    // nest all ts files with the same name under *.ts (e.g app.test.ts will be under app.test)
    "*.ts": "$(capture).js, $(capture).d.ts.map, $(capture).*.ts, $(capture)_*.js, $(capture)_*.ts",
    // nest all tsx files with the same name under *.tsx (e.g app.test.tsx will be under app.test)
    "*.tsx": "$(capture).ts, $(capture).*.tsx, $(capture)_*.ts, $(capture)_*.tsx, $(capture).less, $(capture).module.less, $(capture).module.less.d.ts, $(capture).scss, $(capture).module.scss, $(capture).module.scss.d.ts, $(capture).css.ts",
  },
}